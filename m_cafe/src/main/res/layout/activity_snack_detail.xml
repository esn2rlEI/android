<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/snack_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/snack_image"/>

        <TextView
            android:id="@+id/snack_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/snack_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/snack_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/snack_price"
            android:textSize="24sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/snack_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/snack_description"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="32dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/cart_quantity_prefix"/>

            <EditText
                android:id="@+id/quantity_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:inputType="number"
                android:hint="@string/cart_quantity_name"
                android:text="@string/cart_quantity" />

            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"
                android:text="@string/add_to_cart"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>